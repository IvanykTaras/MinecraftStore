@model LoginUser
@{
	ViewBag.Title = "Logowanie";
}


<main class="text-center">
	<div class="form-signin w-100 m-auto">
	  <form asp-controller="Account" asp-action="Login" method="post">
		
		<img class="mb-4" src="https://www.freepnglogos.com/uploads/minecraft-logo-17.png" alt="" width="200"/>
		<h1 class="h3 mb-3 fw-normal">Prosze zalogować się!</h1>
		<div class="text-danger" asp-validation-summary="All"></div>

		<div class="form-floating">
		  <input asp-for="Name" type="text" class="form-control"  placeholder="Jakaś nazwa">
		  <label asp-for="Name">Nazwa użytkownika</label>
		</div>

		<div class="form-floating">
		  <input asp-for="Password" type="password" class="form-control"  placeholder="Hasło">
		  <label asp-for="Password">Hasło</label>
		</div>

		<input class="w-100 btn btn-lg btn-primary" type="submit" value="Zalogować się"/>
	  </form>
	</div>
</main>
