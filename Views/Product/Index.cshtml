@using MinecraftStore.Data.utils
@model List<Product>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}



<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach(Product product in Model){

                <div class="col">
                    <div class="card shadow-sm">
                    <img src="@ItemImage.GetPath(product.Image)" class="bd-placeholder-img card-img-top" alt="..." width="100%" height="225">
                    <div class="card-body">
                        <p class="card-text">Nazwa: @product.Name</p>
                        <p class="card-text">Data stwożenia: @product.CreatedDate.ToString("yyyy-MM-dd")</p>
                        <div class="alert alert-primary mr-4" role="alert" style="margin-right: 10px">
                            @Html.DisplayFor(e => product.Rarity)
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group d-flex">
                                @if (User.IsInRole("Admin")) { 
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@product.Id"><i class="bi bi-trash"></i></a>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@product.Id"><i class="bi bi-pencil-square"></i></a>
                                }
                        </div>
                                @if (User.IsInRole("Admin"))
                                { 
                                    <button type="button" disabled class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-cash-coin"></i> @product.Price
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-cash-coin"></i> @product.Price
                                    </button>
                                }
                        </div>
                    </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>



