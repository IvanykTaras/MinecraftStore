@{
}

<div class="row">
    
    @foreach(var product in Model){

        <div class="card" style="width: 18rem;">
            <div class="card-header">
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">
                    <i class="bi bi-trash"></i>
                </a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@product.Id">
                    <i class="bi bi-pencil-square"></i>
                </a>
            </div>

          <img src="..." class="card-img-top" alt="...">
          
          <div class="card-body">
            <h5 class="card-title">
                @product.Name
            </h5>
          </div>

            <div class="card-footer bg-transparent border-success">
                <div class="alert alert-success" role="alert">
                    @product.Price
                </div>
            </div>
        </div>

    }
    
</div>




<a asp-controller="Product" asp-action="Create" class="btn btn-primary">Create</a>